<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.sportmate.main.profile.like.dao.LikeDAO">
 
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO
 			`like`
 		(
 			`userId`
 			, `storyId`
 			, `createdAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{storyId}
 			, now()
 		)
 	</insert>
 	
 	<delete id="deleteLike" parameterType="map">
 		DELETE FROM
 			`like`
 		WHERE
 			`storyId` = #{storyId}
 			AND `userId` = #{userId}
 	</delete>
 	
	<select id="countLike" resultType="int" parameterType="int">
		SELECT
			count(1)
		FROM
			`like`
		WHERE
			`storyId` = #{storyId}
	</select>
	
	 <select id="countLikeById" resultType="int" parameterType="map">
		SELECT
			count(1)
		FROM
			`like`
		WHERE
			`storyId` = #{storyId}
			AND `userId` = #{userId}
 	</select>

	<delete id="deleteStoryLike" parameterType="int">
		DELETE FROM
			`like`
		WHERE
			`storyId` = #{storyId}
	</delete>
 
 </mapper>